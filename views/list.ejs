  <meta charset="utf-8">
  <title>ToDoList</title>
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <main>
    <div class="box" id="heading">
     <h1><%= kindOfDay %> List</h1>
    </div>

   <div class="box">
      <% for(let i = 0; i < newListItem.length; i++) {  %>
     <div class="item">
        <input type="checkbox">
        <p class="addItem"><%= newListItem[i] %> </p> 
      </div>
     <% } %>

     <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="button" class="btn" value="add">+</button>
      <button type="submit" name="button" class="btn" value="rm">-</button>
     </form>
    </div>
  </main>

